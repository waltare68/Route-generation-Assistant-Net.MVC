@using CollectionEditing.Infrastructure
@model RGA.Models.Shipment

@using (Html.BeginCollectionItem("Shipments"))
{
    <div class="findableclosest">
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @*Html.HiddenFor(model => model.Id)*@
    
        <div class="col-md-6 form-group">
            <div class="form-group">
                @Html.LabelFor(model => model.Number, new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Number, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Number, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DestinationAddress, new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DestinationAddress, new {htmlAttributes = new {@class = "form-control addressable"}})
                    @Html.ValidationMessageFor(model => model.DestinationAddress, "", new {@class = "text-danger"})
                </div>
            </div>

        </div>
        <div class="col-md-6 form-group">
            <div id="my_map" class="map_canvas mappable"></div>
        </div>
        <a href="#" onclick=" deleteContainer(event) " class="btn btn-default">Usuń</a>
        <hr />
        <br style="clear: both" /> 
    </div>
}